mixin sStepsItem(data)
	+e.col.swiper-slide
		+e.step
			+e.title=data.title
			+e.txt=data.txt
			+e.time
				+e.t-icon
					img(loading="lazy" src="img/svg/clock-orange.svg" alt="")
				+e.t-txt=data.time
			+e.foot=data.foot
